<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turn On Lights"
        android:onClick="turnLightsOnPressed"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="96dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turn Off Lights"
        android:onClick="turnLightsOffPressed"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="167dp" />


    <ImageView
        android:id="@+id/btn1"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:onClick="playNoteSound"
        app:srcCompat="@android:color/darker_gray" />

    <ImageView
        android:id="@+id/btn2"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:onClick="playNoteSound" />

    <ImageView
        android:id="@+id/btn3"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:onClick="playNoteSound"
        app:srcCompat="@android:color/darker_gray" />

    <ImageView
        android:id="@+id/btn4"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:onClick="playNoteSound" />

    <ImageView
        android:id="@+id/btn5"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:onClick="playNoteSound"
        app:srcCompat="@android:color/darker_gray" />

    <ImageView
        android:id="@+id/btn6"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:onClick="playNoteSound"
 />
    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="subscribeBtnPressed"
        android:text="Subscribe to evnts"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="167dp" />

    <TextView
        android:id="@+id/resultsLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Results" />


</LinearLayout>